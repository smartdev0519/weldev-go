my $command = "mksignal ". join(' ', @ARGV);

print <<EOF;
// Generated by mksignal; DO NOT EDIT.
// $command

package syscall

export const(
EOF

while(<>){
	next if /SIGSTKSZ/;
	next if /SIGEV_/;
	if(/^#define\s+(SIG[^_\s]\w*)\s+([0-9]+)/){
		print "	$1 = $2;\n";
	}
}

print <<EOF;
)
EOF
